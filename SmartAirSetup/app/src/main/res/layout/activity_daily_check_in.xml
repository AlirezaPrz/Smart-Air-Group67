<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/textCheckInTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily asthma check-in"
            android:textSize="24sp"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Night waking -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Night waking"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_medium" />

        <RadioGroup
            android:id="@+id/radioNightWaking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioNightNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/radioNightSome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some" />

            <RadioButton
                android:id="@+id/radioNightALot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A lot" />
        </RadioGroup>

        <!-- Activity limits -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity limits"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioActivityLimits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioActivityNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/radioActivitySome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some" />

            <RadioButton
                android:id="@+id/radioActivityALot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A lot" />
        </RadioGroup>

        <!-- Cough / wheeze -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cough / wheeze"
            android:textColor="#2E7D32"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioCoughWheeze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioCoughNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/radioCoughSome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some" />

            <RadioButton
                android:id="@+id/radioCoughALot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A lot" />
        </RadioGroup>

        <TextView
            android:id="@+id/textCheckInError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonSubmitCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save check-in"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2E7D32"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>